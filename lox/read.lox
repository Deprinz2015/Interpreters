var age = read("How old are you? ");

print("You are " + age + " Years old");

if (age > 20) {
    print("Fifth of a millenia. Feelin' old yet?");
}

if (age < 18) {
    print("Ha, you can't even drive alone.");
}

age = read("How old is your friend? ", false);

print("Your friend is " + age + " years old.");

var count = read("Count up to: ", true);

for(var i = 0; i < count; i = i + 1) {
    print("Counting... " + (i + 1));
}
